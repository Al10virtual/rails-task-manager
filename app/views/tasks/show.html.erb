<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" checked> This task is completed
<% else %>
  <input type="checkbox"> This task is not completed
<% end %>
<p><%= link_to "Edit", edit_path %></p>
<p><%= link_to "Back to list", tasks_path %></p>

<p> <%= link_to "Delete",
     task_path(@task),
     data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
</p>
